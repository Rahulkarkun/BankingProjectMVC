
@{
    ViewBag.Title = "CustomerDashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>CustomerDashboard</h2>*@

<body style="background: linear-gradient(to right, #4e54c8, #8f94fb); color: black;">
    <div class="container" style="background-color: #34495e; padding: 20px; border-radius: 10px; margin-top: 20px;">
        <h2 style="color: white; margin-bottom: 20px;">Customer Dashboard</h2>

        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card" style="background-color: #2c3e50; color: white;">
                    <div class="card-body">
                        <h5 class="card-title">View Account</h5>
                        <p class="card-text">View details of your account.</p>
                        @Html.ActionLink("View Account Details", "Index", "Account", new { area = "" }, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card" style="background-color: #2c3e50; color: white;">
                    <div class="card-body">
                        <h5 class="card-title">Upload Document</h5>
                        <p class="card-text">Upload necessary documents.</p>
                        @Html.ActionLink("Upload Documents", "Create", "Document", new { area = "" }, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card" style="background-color: #2c3e50; color: white;">
                    <div class="card-body">
                        <h5 class="card-title">Passbook</h5>
                        <p class="card-text">View your account transactions.</p>
                        @Html.ActionLink("View Passbook", "Index", "Transaction", new { area = "" }, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>