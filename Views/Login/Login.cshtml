<style>
    body {
        background: linear-gradient(to right, #4e54c8, #8f94fb);
        /*padding-bottom:1px;*/
        color: black;
    }

    .container-login {
        background-color: white;
        padding-top: 60px; /* Add more padding to the top */
        padding-bottom: 10px;
        max-width: 28%;
        margin: auto;
        padding: 35px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        align-items: center;
    }


    /* Center the labels and EditorFor fields */
    .form-group-label {
        text-align: center;
        margin-bottom: 5px; /* Reduced spacing between labels and textboxes */
        font-weight: bold; /* Adjust font weight */
        color: #2c3e50; /* Darker font color */
    }

    /* Add border to textboxes */
    .form-control {
        border: 1px solid #34495e; /* Slightly dark border color */
    }

    /* Increase the width of the login button */
    .btn-primary {
        width: 100%; /* Adjust width as needed */
        padding: 9px; /* Adjust padding as needed */
        font-size: 16px; /* Adjust font size as needed */
    }

    /* Adjust spacing between "Username" textbox and "Password" label */
    .password-label-margin {
        margin-top: 15px; /* Adjust margin as needed */
    }
</style>



<div class="container-login">


    <h2 class="text-center">Login</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group row form-group-label">
                <label for="Username" class="control-label col-md-2 col-sm-12">Username</label>
            </div>

            <div class="form-group row form-group-label">
                <div class="col-md-12"></div> <!-- Empty space -->
            </div>

            <div class="form-group row form-group-label">
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row form-group-label password-label-margin">
                <label for="Password" class="control-label col-md-2 col-sm-12">Password</label>
            </div>

            <div class="form-group row form-group-label">
                <div class="col-md-12"></div> <!-- Empty space -->
            </div>

            <div class="form-group row form-group-label">
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div><br />

            <div class="form-group row form-group-label">
                <div class="col-md-12"></div> <!-- Empty space -->
            </div>

            <div class="form-group row form-group-label">
                <div class="col-md-12 text-center">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

    @*<div class="text-center">
            @Html.ActionLink("Back to List", "Index")
        </div>*@
</div>

@section Scripts {
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}
